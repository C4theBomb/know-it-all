{
    "name": "know-it-all",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "client": "npm start --ws client",
        "server": "npm start --ws server",

        "prebuild": "npm run env",
        "build": "npm run build --ws client",

        "predev": "npm run build",
        "dev": "npm run build && npm run server",
        
        "preinstall-all": "npm run clean",
        "install-all": "npm ci && npm ci --prefix client && npm ci --prefix server",
        
        "predist": "npm run install-all && npm run build",
        "dist": "npm run package",

        "test": "npm run test --ws",

        "env": "npm run env --ws",

        "package": "tar -czf ./dist.tar.gz ./.github ./.vscode ./client ./node_modules ./server .env .gitignore LICENSE package-lock.json package.json README.md",
        "clean": "npm run clean --ws && rm -rf node_modules/"
    },
    "author": "C4 Patino",
    "license": "ISC",
    "workspaces": [
        "server",
        "client"
    ],
    "dependencies": {
        "create-react-app": "^5.0.0",
        "dotenv": "^16.0.0",
        "express-generator": "^4.2.0",
        "js-cookie": "^3.0.1"
    },
    "devDependencies": {
        "sequelize-cli": "^6.4.1"
    }
}
